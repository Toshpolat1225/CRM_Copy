<div class="content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
          <!-- form start -->
          <form action="/teacherGroupStudent/teachers/add" method="POST" >
            <div class="card-body">
              
              <div class="form-group">
                <label for="name">Имя учителя</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                />
              </div>
              <div class="form-group">

                <label for="job">Специальность</label>

                <input
                  type="text"
                  class="form-control"
                  id="job"
                  placeholder="Teacher job"
                  name="job"
                />
              </div>
              <div class="form-group">
                <label for="phone">Телефон</label>
                <input
                  type="number"
                  class="form-control"
                  id="phone"
                  placeholder="Teacher phone"
                  name="phone"
                />
              </div>
              
              <div class="form-group">
                <label for="salary">Зарплата</label>
                <input
                  type="number"
                  class="form-control"
                  id="salary"
                  placeholder="Teacher salary"
                  name="salary"
                />
              </div>
             

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <button type="submit" class="btn btn-create-student">Создать</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</div>