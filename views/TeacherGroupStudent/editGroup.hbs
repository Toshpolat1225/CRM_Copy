<div class="content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">

          <!-- form start -->
          <form action="/teacherGroupStudent/groups/edit/{{group.id}}" method="POST" >
            <div class="card-body">
              <div class="form-group">
                <label for="name">Название группы</label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  placeholder="Group title"
                  name="title"
                  value="{{group.title}}"
                />
              </div>
            
              <div class="form-group">
                <label>Предподаватель группы</label>
                <select name="teacherId" class="form-control">
                  {{#each teachers}}
                  <option value="{{id}}" id="{{id}}" {{#sel name @root.teacherName}}selected{{/sel}}>{{name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <button type="submit" class="btn btn-create-student">Редактировать</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</div>