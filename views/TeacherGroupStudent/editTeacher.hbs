<div class="content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">

          <!-- form start -->
          <form action="/teacherGroupStudent/teachers/edit/{{teacher.id}}" method="POST" >
            <div class="card-body">

               <div class="form-group">
                <label for="name">ФИ предподавателя</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  placeholder="Teacher name"
                  name="name"
                  value="{{teacher.name}}"
                />
              </div>
              <div class="form-group">
                <label for="job">Специальность</label>
                <input
                  type="text"
                  class="form-control"
                  id="job"
                  placeholder="Teacher job"
                  name="job"
                  value="{{teacher.job}}"
                />
              </div>
              <div class="form-group">
                <label for="phone">Телефон</label>
                <input
                  type="number"
                  class="form-control"
                  id="phone"
                  placeholder="Teacher phone"
                  name="phone"
                  value="{{teacher.phone}}"
                />
              </div>
             
              <div class="form-group">
                <label for="salary">Зарплата</label>
                <input
                  type="number"
                  class="form-control"
                  id="salary"
                  placeholder="Teacher salary"
                  name="salary"
                  value="{{teacher.salary}}"
                />
              </div>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <button type="submit" class="btn btn-create-student">Редактировать</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</div>