<div class="salary-card d-flex justify-content-center">
    <div class="row justify-content-center mt-5">
        <div class="col-sm-12 col-md-8">
            <div class="salary-card-title">
                <h3>Редатировать</h3>
            </div>
            <div class="salary-card-secendary">
                <form action="/salary/edit" method="POST">
                    <div class="card-body">
                        <div class="form-group card-formGroup">
                            <label for="inputProjectLeader " class="salary-label">Сотрудник</label>
                            <select id="inputProjectLeader" class="form-control custom-select" name="userId" required>
                                {{#each workers}}
                                <option value="{{id}}" {{#sel @root.salary.userId id}} {{/sel}}>{{fullname}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group card-formGroup">
                            <label for="price" class="salary-label">Зарплата</label>
                            <input type="number" class="form-control" id="price" name="price" required
                                value="{{salary.price}}" />
                        </div>
                        <div class="form-group card-formGroup">
                            <label for="dateOld" class="salary-label">Прошлая дата</label>
                            <input type="date" class="form-control" id="dateOld" name="dateOld" required
                                value="{{salary.dateOld}}" />
                        </div>
                        <div class="form-group card-formGroup">
                            <label for="date" class="salary-label">Следующая дата</label>
                            <input type="date" class="form-control" id="date" name="date" required
                                value="{{salary.date}}" />
                        </div>
                        <div class="form-group card-formGroup">
                            <div class="card-footer">
                                <input type="hidden" name="_csrf" value="{{csrf}}" id="csrf" />
                                <input type="hidden" value="{{salary._id}}" name="id">
                                <button type="submit" class="btn btn-primary salary-button">Изменить</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>